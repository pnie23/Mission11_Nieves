@{
    ViewData["Title"] = "Home Page";
}

@model BooksListViewModel

<h1>The Book Collection</h1>

@{
    var books = Model.Books.ToList();
    int itemCount = books.Count;
    int halfCount = itemCount / 2;
    var firstHalf = books.Take(halfCount);
    var secondHalf = books.Skip(halfCount);
}

<div class="row">
    <div class="col-md-6">
        @foreach (var book in firstHalf)
        {
            <partial name="BookSummary" model="book" />
        }
    </div>
    <div class="col-md-6">
        @foreach (var book in secondHalf)
        {
            <partial name="BookSummary" model="book" />
        }
    </div>
</div>

<div page-model="@Model.PaginationInfo" page-action="Index" page-class-enabled="true" page-class="btn" page-class-normal="btn-outline-dark" page-class-selected="btn-primary" class="btn-group pull-right m-1"></div>
